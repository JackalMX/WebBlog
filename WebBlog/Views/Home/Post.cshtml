@model Post

@{

}
<div class="post__container">
    <h2>@Model.Title</h2>

    @if (!String.IsNullOrEmpty(Model.Image))
    {
        var image_path = $"/Image/{Model.Image}";
        <img src = "@image_path" width="500" />
    }

    <div class="post-body">
        @Html.Raw(Model.Body)
    </div>
    <p>@Model.Created</p>
</div>